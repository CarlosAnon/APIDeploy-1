<section class="mt-5 container">
<p class="text-center"> Welcome {{tokenStatus.name}}</p>
    <div class="row justify-content-center">
        <h2 class="my-5 text-center"> Password Recovery</h2>
        <div class="col-10 col-lg-5"> 

            
            <form action="{{token}}" method="post" class="border border-dark rounded p-4">
            <input class="form-control mt-3" type="password" maxlength="15" placeholder="Type new password"
                autocomplete="new-password" name="password_1" autofocus="">
            <div id="passwordHelpBlock" class="form-text mb-4">
                Your password must be 8-15 characters long
            </div>
            <input class="form-control mt-3" type="password" maxlength="15" placeholder="Type new password"
                autocomplete="new-password" name="password_2" autofocus="">
            <div id="repeatPasswordHelpBlock" class="form-text mb-4">
                both passwords must be identical
            </div>
            <div class="d-flex justify-content-center">
            </div>
            {{#each errorWarnings}}
                <div class="alert alert-danger" role="alert">
                {{msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/each}}
            <div class="d-flex justify-content-center">
                <input type="submit" class=" btn btn-success" value="send new password">
            </div>

            </form>

        </div>

</div>

</section>